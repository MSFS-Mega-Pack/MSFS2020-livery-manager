{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["react", "jsdoc"],
  "ignorePatterns": ["node_modules", "dist", "webpack.*.config.js", "main.js"],
  "rules": {
    "semi": "error"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
